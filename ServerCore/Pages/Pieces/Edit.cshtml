@page "/{eventId}/{eventRole}/Pieces/Edit/{puzzleId}"
@model ServerCore.Pages.Pieces.EditModel

@{
    ViewData["Title"] = "Edit puzzle piece";
}

<h2>@Model.Piece.Puzzle.Name:  Edit puzzle piece</h2>
<div>
    <a asp-page="./Index" asp-route-puzzleid="@Model.PuzzleId">Cancel</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Piece.PuzzleID" />
            <input type="hidden" asp-for="Piece.ID" />
            <div class="form-group">
                <label asp-for="Piece.ProgressLevel" class="control-label"></label>
                <input asp-for="Piece.ProgressLevel" class="form-control" />
                <span asp-validation-for="Piece.ProgressLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Piece.Contents" class="control-label"></label>
                <input asp-for="Piece.Contents" class="form-control" />
                <span asp-validation-for="Piece.Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
