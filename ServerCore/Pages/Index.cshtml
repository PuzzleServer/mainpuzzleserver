@page
@model IndexModel
@{
    ViewData["Title"] = "Microsoft Puzzle Event Homepage";
}

<!-- TODO: Clean this up (current change is a temporary fix to prevent errors from visitors) -->

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/puzzlehunt.png" alt="Puzzlehunt" class="img-responsive" style="background-color: crimson" />
            <div class="carousel-caption" role="option">
                <p>
                    Microsoft Puzzle Website
                </p>
            </div>
        </div>
    </div>
</div>


<h3>PuzzleDay</h3>
<p>A one-day event for interns and friends that happens every summer. Puzzle solvers of all levels of experience are welcome!</p>
<a href="http://aka.ms/puzzleday">Go to the PuzzleDay event</a>

<h3>PuzzleHunt</h3>
<p>A weekend-long event in spring for full-time employees and friends. Puzzles of all levels are included!</p>
<a href="http://aka.ms/ph20">Go to the last PuzzleHunt event</a>



