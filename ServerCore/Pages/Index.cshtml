@page
@model IndexModel
@{
    ViewData["Title"] = "Microsoft Puzzle Event Homepage";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/puzzlehunt.png" alt="Puzzlehunt" class="img-responsive" style="background-color: crimson" />
            <div class="carousel-caption" role="option">
                <p>
                    Microsoft Puzzlehunt
                    <a class="btn btn-default" href="http://aka.ms/puzzlehunt">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/puzzleday.png" alt="Puzzleday" class="img-responsive" style="background-color:darkcyan" />
            <div class="carousel-caption" role="option">
                <p style="text-align:left">
                    Microsoft Puzzleday
                    <a class="btn btn-default" href="http://aka.ms/puzzleday">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/nipd.png" alt="NIPD" class="img-responsive" style="background-color:cadetblue" />
            <div class="carousel-caption" role="option">
                <p>
                    Microsoft Non-Intern Puzzleday
                    <a class="btn btn-default" href="http://aka.ms/nipd">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        @*<div class="item">
            <img src="~/images/banner4.svg" alt="Microsoft Azure" class="img-responsive" />
