@page "/{eventId}/{eventRole}/Responses/Edit/{puzzleId}"
@model ServerCore.Pages.Responses.EditModel

@{
    ViewData["Title"] = "Edit response";
    //Needs route data - ViewData["AdminRoute"] = "/Responses/Edit";
    //Needs route data - ViewData["AuthorRoute"] = "/Responses/Edit";
    //Needs route data - ViewData["PlayRoute"] = "/Submissions/Index";
}

<h2>@Model.PuzzleResponse.Puzzle.Name: Edit response</h2>
<div>
    <a asp-page="./Index" asp-route-puzzleid="@Model.PuzzleId">Cancel</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PuzzleResponse.PuzzleID" />
            <input type="hidden" asp-for="PuzzleResponse.ID" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PuzzleResponse.IsSolution" /> @Html.DisplayNameFor(model => model.PuzzleResponse.IsSolution)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PuzzleResponse.SubmittedText" class="control-label"></label>
                <input asp-for="PuzzleResponse.SubmittedText" class="form-control" />
                <span asp-validation-for="PuzzleResponse.SubmittedText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuzzleResponse.ResponseText" class="control-label"></label>
                <input asp-for="PuzzleResponse.ResponseText" class="form-control" />
                <span asp-validation-for="PuzzleResponse.ResponseText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuzzleResponse.Note" class="control-label"></label>
                <input asp-for="PuzzleResponse.Note" class="form-control" />
                <span asp-validation-for="PuzzleResponse.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
