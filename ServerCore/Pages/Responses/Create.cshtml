@page
@model ServerCore.Pages.Responses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Response</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PuzzleResponse.IsSolution" /> @Html.DisplayNameFor(model => model.PuzzleResponse.IsSolution)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PuzzleResponse.SubmittedText" class="control-label"></label>
                <input asp-for="PuzzleResponse.SubmittedText" class="form-control" />
                <span asp-validation-for="PuzzleResponse.SubmittedText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuzzleResponse.Note" class="control-label"></label>
                <input asp-for="PuzzleResponse.Note" class="form-control" />
                <span asp-validation-for="PuzzleResponse.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-puzzleid="@Model.PuzzleId" asp-route-eventid="@Model.EventId">Back to Response List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
