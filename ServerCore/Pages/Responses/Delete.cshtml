@page "/{eventId}/{eventRole}/Responses/Delete/{puzzleId}"
@model ServerCore.Pages.Responses.DeleteModel

@{
    ViewData["Title"] = "Delete";
    //Needs route data - ViewData["AdminRoute"] = "/Responses/Delete";
    //Needs route data - ViewData["AuthorRoute"] = "/Responses/Delete";
    //Needs route data - ViewData["PlayRoute"] = "/Submissions/Index";
}

<h2>@Model.PuzzleResponse.Puzzle.Name: Delete response</h2>
<div>
    <a asp-page="./Index" asp-route-puzzleid="@Model.PuzzleId">Cancel</a>
</div>

<h3>Are you sure you want to delete this response?</h3>
<div>
    <h4>Response</h4>
    <hr />
    <table class="table-definitions">
        <tr>
            <td>
                IsSolution
            </td>
            <td>
                @Model.PuzzleResponse.IsSolution
            </td>
        </tr>
        <tr>
            <td>
                SubmittedText
            </td>
            <td>
                @Model.PuzzleResponse.SubmittedText
            </td>
        </tr>
        <tr>
            <td>
                ResponseText
            </td>
            <td>
                @Model.PuzzleResponse.ResponseText
            </td>
        </tr>
        <tr>
            <td>
                Note
            </td>
            <td>
                @Model.PuzzleResponse.Note
            </td>
        </tr>
    </table>

    <form method="post">
        <input type="hidden" asp-for="PuzzleResponse.ID" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
</div>
