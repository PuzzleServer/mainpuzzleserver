@page "/{eventId}/{eventRole}/Responses/Delete/{puzzleId}"
@model ServerCore.Pages.Responses.DeleteModel

@{
    ViewData["Title"] = "Delete";
    //Needs route data - ViewData["AdminRoute"] = "/Responses/Delete";
    //Needs route data - ViewData["AuthorRoute"] = "/Responses/Delete";
    //Needs route data - ViewData["PlayRoute"] = "/Submissions/Index";
}

<h2>@Model.PuzzleResponse.Puzzle.Name: Delete response</h2>
<div>
    <a asp-page="./Index" asp-route-puzzleid="@Model.PuzzleId">Cancel</a>
</div>

<h3>Are you sure you want to delete this response?</h3>
<div>
    <h4>Response</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PuzzleResponse.IsSolution)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PuzzleResponse.IsSolution)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PuzzleResponse.SubmittedText)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PuzzleResponse.SubmittedText)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PuzzleResponse.ResponseText)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PuzzleResponse.ResponseText)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PuzzleResponse.Note)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PuzzleResponse.Note)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PuzzleResponse.ID" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
</div>
