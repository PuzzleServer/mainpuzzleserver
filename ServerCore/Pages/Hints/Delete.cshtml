@page "/{eventId}/{eventRole}/Hints/Delete/{puzzleId}"
@model ServerCore.Pages.Hints.DeleteModel

@{
    ViewData["Title"] = "Delete hint";
    //Needs route data - ViewData["AdminRoute"] = "/Hints/Delete";
    //Needs route data - ViewData["AuthorRoute"] = "/Hints/Delete";
    //Needs route data - ViewData["PlayRoute"] = "/Teams/Hints";
}

<h2>@Model.Hint.Puzzle.Name: Delete hint</h2>
<a asp-page="./Index">Cancel</a>

<h3>Are you sure you want to delete this hint?</h3>
<div>
    <h4>Hint</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Hint.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hint.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hint.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hint.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hint.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hint.Cost)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Hint.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
    </form>
</div>
