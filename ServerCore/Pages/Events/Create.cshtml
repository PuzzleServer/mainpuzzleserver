@page
@model ServerCore.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create event";
}

<h2>Create a new event</h2>
<h3><span style="color: red">ALL TIMES UTC! Current time is @DateTime.UtcNow.ToShortTimeString()</span></h3>

<h4>Event</h4>
<hr />
