            <div class="form-group">
                <label asp-for="Event.TermForGroup" class="control-label"></label>
                <textarea asp-for="Event.TermForGroup" class="form-control"></textarea>
                <span asp-validation-for="Event.TermForGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
