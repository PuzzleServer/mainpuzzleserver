@page "/{eventId}/{eventRole}/Events/Mailer/{group}"
@model ServerCore.Pages.Events.MailerModel
@{
    ViewData["Title"] = "Mailer";
    ViewData["AdminRoute"] = "/Events/Mailer";
    ViewData["AuthorRoute"] = "/EventSpecific/Index";
    ViewData["PlayRoute"] = "/EventSpecific/Index";
}

<h2>Mail to: @(Model.Team?.Name ?? "All") @Model.Group @(Model.Puzzle == null ? null : $"of {Model.Puzzle.PlaintextName}")</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Group" />
    <input type="hidden" asp-for="TeamID" />
    <input type="hidden" asp-for="PuzzleID" />
    <div class="form-group">
        <label asp-for="MailSubject" class="control-label"></label>
        <input asp-for="MailSubject" class="form-control" />
        <span asp-validation-for="MailSubject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MailBody" class="control-label"></label>
        <textarea asp-for="MailBody" class="form-control"></textarea>
        <span asp-validation-for="MailBody" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
    <div>
        <h2>Sending mail to:</h2>
        <span>@Model.MailAddresses</span>
    </div>
</form>
